.contact-form {
  padding: 16px;
  padding-top: 40px;
  input, textarea {
    width: 100%;
    background: rgba(0,0,0, 0.4);
    border: 0;
    margin-bottom: 32px;
    padding: 16px;
    outline: none;
    color: white;
    &::-webkit-input-placeholder { /* Chrome/Opera/Safari */
      color: #ddd;
    }
    &::-moz-placeholder { /* Firefox 19+ */
      color: #ddd;
    }
    &:-ms-input-placeholder { /* IE 10+ */
      color: #ddd;
    }
    &:-moz-placeholder { /* Firefox 18- */
      color: #ddd;
    }
  }
  textarea {
    min-height: 200px;
    max-height: 200px;
  }

  label {
    color: #da1c5c;
    font-weight: 300;
    padding: 4px 8px;
  }

  button {
    border: 0;
    background: 0;
    padding: 16px 32px;
    min-width: 200px;
    font-size: 10px;
    text-transform: uppercase;
    transition: all 0.3s ease-in;
    background-color: rgba(255,255,255,0.1);
    box-shadow: 0 1px 0 0 rgba(0,0,0,0.2);
    border: 1px solid rgba(255,255,255,0.05);
    color: #fff;
    cursor: pointer;
    outline: none;
    text-shadow: 0 1px 0 rgba(0,0,0,0.2);    
    &:hover {
      text-decoration: none;
      background-color: rgba(255,255,255,0.2);
      border: 1px solid rgba(255,255,255,0.2);
    }
  }
}


.contact-information {  
  .contact-information-headline {
    display: flex;
    flex-direction: row;
    h3 {
      padding-left: 16px;
      color: #da1c5c;
      font-weight: 300;
      font-size: 16px;
      text-transform: uppercase;
    }
    img {
      padding: 0;
      margin: 8px;
      height: 36px;
    }
  }
  .contant-information-content {
    padding: 8px;
    padding-left: 8px;
    padding-bottom: 24px;
    font-size: 16px;
    color: white;
    a {
      color: white;
    }
  }
}
