.testamonial-section {
    img {
      height: 50px;
      display: block;
      margin: 40px auto;
    }
}

.testamonial {


  .owl-dots {
    display: flex; 
    justify-content: center;
  }

  .owl-dot {
    width: 10px;
    height: 10px;
    margin: 8px
    border: 1px solid rgba(255, 255, 255, 0.6);
    border-radius: 10px;
    background: transparent;
    flex: 0 1 auto;
    &.active {
      background: white;
      border: 1px solid white

    }
  }


  .testamonial-qoute {
    
    p {
      color: #FFF;
      text-align: center;
      font-size: 20px;
      font-weight: 300;
      line-height: 27px;
      margin-bottom: 24px;
      letter-spacing: 1.5px;
    }

    h3 {
      text-align: center;
      text-transform: uppercase;
      letter-spacing: 3px;
      font-size: 16px;
      padding-bottom: 30px;
      font-weight: 400;
      color: #DA1C5C;
    }

    span {
      text-transform: none;
      letter-spacing: 2px;
      padding-top: 8px;
      font-weight: 300;
      display: block;
      color: #FFF;
      text-transform: uppercase;
      font-size: 12px;
    }
  }
}


.customers-wrapper {
  padding: 24px;
}

.customers .item {
  height: 100px;
  text-align: center;
  img {
    filter: grayscale(100)
    transition: filter 0.3s linear
    height: 100px;
    width: auto;
    margin: auto;
    &:hover {
      filter: grayscale(0)  
    }
  }
}
