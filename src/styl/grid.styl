.section {
  min-height: 500px;
  outline: none;
  &.white-section {
    background: white;  
  }
  &.grey-section {
    background: #f1f1f1;  
  }
  &.color-section {
    background: #6569B0;
    background: -webkit-linear-gradient(to right, #6569B0, #865B99);
    background: linear-gradient(to right, #6569B0, #865B99);
  }
}
