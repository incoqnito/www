.section {
  padding: 60px 0;
  min-height: 400px
  outline: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.white-section {
  background: white;  
}

.grey-section {
  background: #f1f1f1; 
}

.color-section {
  background: #6569B0;
  background: -webkit-linear-gradient(to right, #6569B0, #865B99);
  background: linear-gradient(to right, #6569B0, #865B99);

  h2, p {
    color: white;
  }
}
