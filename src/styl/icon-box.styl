.icon-box {
  position: relative;
  padding: 40px 20px;
  text-align: center;
  img {
    height: 60px;
  }
  h3 {
    font-weight: 400;
    font-size: 14px;
    padding-bottom: 8px;
    text-transform: uppercase;
    padding-top: 24px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  p {
    font-size: 14px;
    text-align: justify;
  }

  &.--is-active {
    &:after {
      display: block;
    }  
  }

  &:after {
    position: absolute;
    content: '';
    display: none;
    left: 0;
    bottom: -20px;
    width: 0; 
    height: 0; 
    border-left: 20px solid transparent;
    border-right: 20px solid transparent;
    border-top: 20px solid white;
    left: 50%;
    margin-left: -20px;
  }
}

.icon-box-description {
  background: #22202b;
  min-height: 100px;
  width: 100%;
  padding: 80px 0;
  box-shadow: inset 0 0 20px rgb(0,0,0);

  p {
    font-weight: 300;
    color: white;
    font-size: 14px;
  }
}

.job-offer-box {
  display: block;
  margin-bottom: 16px;
  padding: 80px 40px;
  min-width: 200px;
  font-size: 10px;
  text-transform: uppercase;
  transition: all 0.3s ease-in;
  box-shadow: 0 1px 0 0 rgba(0,0,0,0.2);
  border: 1px solid #ddd
  color: #000;
  background: #f8f8f8;
  cursor: pointer;
  outline: none;
  text-decoration: none;
  transition: transform 0.3s ease
  h3 {
    font-size: 24px;
    font-weight: 300;
    text-align: center;
    display: flex;
    align-items: center;
  }
  &:hover, &:active, &:focus:active, {
    color: black;
    text-decoration: none;
    transform: scale(1.1)  
  }
}


.service-box {
  padding 40px 8px;

  h3 {
    text-transform: uppercase;
    font-size: 14px;
    font-weight: 400;
    padding-bottom: 8px;
  }

  p {
    text-align: justify;
  }
}
